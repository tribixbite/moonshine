<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/realTimeASRTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Real-Time ASR"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/startASRButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Real-Time ASR"/>

    <Button
        android:id="@+id/stopASRButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Real-Time ASR"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transcriptionRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>

</LinearLayout>
